{
    "BlockType": "dock",
    "PaddingLeft": 12,
    "PaddingRight": 4,
    "Background": "{BackgroundDefault}",
    "ColorizeBackground": {
        "Enabled": false,
        "Color": "#FFFF00",
        "BlendPercentage": 10
    },
    "Triggers": [
        {
            "Condition": "{ItemIndex, Converter=NumberEquals, Parameter=0}",
            "Property": "ColorizeBackgroundOptions.Enabled",
            "Value": true
        }
    ],
    "Items": [
        //left part
        {
            "BlockType": "stack",
            "HorizontalAlignment": "Left",
            "VerticalAlignment": "Center",
            "Items": [
                //flag
                {
                    "BlockType": "image",
                    "Height": 48,
                    "MarginRight": 12,
                    "VerticalAlignment": "Center",
                    "ImageOptions": {
                        "Path": "{Item.Driver.Nationality.LogoPath}",
                        "VerticalAlignment": "Center"
                    }
                },

                //name
                {
                    "BlockType": "text",
                    "MaxWidth": 600,
                    "MarginLeft": 8,
                    "Source": "{Item.Driver.Name}",
                    "HorizontalAlignment": "Left",
                    "VerticalAlignment": "Center",
                    "FontName": "{FontNameDefault}",
                    "FontSize": 42
                },

                //icon badges
                {
                    "BlockType": "itemstack",
                    "Spacing": 4,
                    "MarginLeft": 6,
                    "MarginTop": 4,
                    "ItemStackOptions": {
                        "ItemSource": "{Item.Driver.BadgeImages}",
                        "Template": {
                            "BlockType": "image",
                            "Height": 24,
                            "Source": "{Item}"
                        }
                    }
                },

                //text badge
                {
                    "BlockType": "text",
                    "MaxWidth": 400,
                    "MarginLeft": 8,
                    "MarginTop": 8,
                    "Source": "{Item.Driver.BadgeText}",
                    "HorizontalAlignment": "Left",
                    "VerticalAlignment": "Top",
                    "FontName": "{FontNameDefault}",
                    "FontSize": 16
                }
            ]
        },

        //right part
        {
            "BlockType": "stack",
            "Height": "*",
            "MarginLeft": 82,
            "HorizontalAlignment": "Right",
            "VerticalAlignment": "Center",
            "Items": [
                //teams block
                {
                    "BlockType": "stack",
                    "VerticalAlignment": "Center",
                    "Spacing": 8,
                    "RenderIf": "{Season.LineupsBasedType, Converter=StringEquals, Parameter=Teams}",
                    "Items": [
                        //name
                        {
                            "BlockType": "text",
                            "Source": "{Item.Team.Name}",
                            //"MarginRight": 4,
                            "HorizontalAlignment": "Left",
                            "VerticalAlignment": "Center",
                            "FontName": "{FontNameDefault}",
                            "FontSize": 22,
                            "TextOptions": {
                                "VerticalAlignment": "Center"
                            }
                        },

                        //logo
                        {
                            "BlockType": "image",
                            "Height": 40,
                            "MarginRight": 0,
                            "VerticalAlignment": "Center",
                            "ImageOptions": {
                                "Path": "{Item.Team.LogoPath}",
                                "VerticalAlignment": "Center"
                            }
                        }
                    ]
                },

                //cars block
                {
                    "BlockType": "stack",
                    "VerticalAlignment": "Center",
                    "Spacing": 8,
                    "RenderIf": "{Season.LineupsBasedType, Converter=StringEquals, Parameter=Cars}",
                    "Items": [
                        //name
                        {
                            "BlockType": "text",
                            "Source": "{Item.Car.Name}",
                            "MarginRight": 8,
                            "HorizontalAlignment": "Left",
                            "VerticalAlignment": "Center",
                            "FontName": "{FontNameDefault}",
                            "FontSize": 22,
                            "TextOptions": {
                                "VerticalAlignment": "Center"
                            }
                        },

                        //logo
                        {
                            "BlockType": "image",
                            "Height": 40,
                            "MarginRight": 0,
                            "VerticalAlignment": "Center",
                            "ImageOptions": {
                                "Path": "{Item.Car.Vendor.LogoPath}",
                                "VerticalAlignment": "Center"
                            }
                        }
                    ]
                }
            ]
        }
    ]
}
