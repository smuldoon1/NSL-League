{
    "BlockRoot": {
        "Name": "mainStack",
        "BlockType": "stack",
        "Margin": "{MarginRoot}",
        "Orientation": "Vertical",
        "Items": [
            //event info
            {
                "BlockType": "dock",
                "Orientation": "Horizontal",
                "MarginBottom" : 24,
                "RenderIf" : "{Event, Converter=EmptyObjectToFalse}",
                "Items": [
                    //headerLeft
                    {
                        "Name": "headerLeftPart",
                        "BlockType": "stack",
                        "Orientation": "Vertical",
                        "Spacing": 12,
                        "HorizontalAlignment": "Left",
                        "Items": [
                            //league name
                            {
                                "BlockType": "stack",
                                "VerticalAlignment": "Center",
                                "Items": [
                                    {
                                        "BlockType": "text",
                                        "Source": "{Season.LeagueInfo.LeagueName}",
                                        "FontName": "{FontNameWide}",
                                        "FontSize": 20
                                    },
                                    {
                                        "BlockType": "text",
                                        "Source": " · {Season.Name}",
                                        "VerticalAlignment": "Center",
                                        "FontName": "{FontNameWide}",
                                        "FontSize": 16,
                                        "Foreground": "{ForegroundDarker}"
                                    }
                                ]
                            },

                            //session
                            {
                                "Name": "headerSessionLine",
                                "BlockType": "stack",
                                "VerticalAlignment": "Center",
                                "Spacing": 8,
                                "Items": [
                                    {
                                        "Name": "CountryFlag",
                                        "BlockType": "image",
                                        "VerticalAlignment": "Center",
                                        "Height": 48,
                                        "Source": "{Event.Track.Nation.LogoPath}"
                                    },

                                    {
                                        "Name": "CountryName",
                                        "BlockType": "text",
                                        "MarginLeft": 12,
                                        "VerticalAlignment": "Center",
                                        "Source": "{Event.Track.CountryName}",
                                        "FontName": "{FontNameWide}",
                                        "FontSize": 28
                                    },

                                    {
                                        "Name": "LocationName",
                                        "BlockType": "text",
                                        //"MarginLeft": 12,
                                        //"MarginTop": 2,
                                        "VerticalAlignment": "Center",
                                        "Source": "  ·  {Event.Track.CircuitName}",
                                        "FontName": "{FontNameWide}",
                                        "FontSize": 18,
                                        "Foreground": "{ForegroundDarker}"
                                    }
                                ]
                            }
                        ]
                    },

                    //headerRight
                    {
                        "Name": "headerRightPart",
                        "BlockType": "stack",
                        "MarginLeft": 56,
                        "Orientation": "Vertical",
                        "HorizontalAlignment": "Right",
                        "Items": [
                            {
                                "BlockType": "stack",
                                "Items": [
                                    {
                                        "BlockType": "stack",
                                        "Orientation": "Vertical",
                                        "Spacing": 8,
                                        "Items": [
                                            {
                                                "BlockType": "text",
                                                "HorizontalAlignment": "Right",
                                                "VerticalAlignment" : "Center",
                                                "Source": "Penalties",
                                                "FontName": "{FontNameWide}",
                                                "FontSize": 24,
                                                "Foreground": "{ForegroundDarker}"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    }
                ]
            },

            //separator
            {
                "Name": "separator",
                "RenderIf" : "{Event, Converter=EmptyObjectToFalse}",
                "BlockType": "image",
                "MarginTop": 4,
                "MarginLeft": 4,
                "MarginRight": 4,
                "MarginBottom": 24,
                "Width": "*",
                "Source": "separator.png"
            },

            //penalties
            {
                "BlockType": "itemstack",
                "Orientation": "Vertical",
                "Spacing": 48,
                "ItemStackOptions": {
                    "ItemSource": "{Penalties.Penalties}",
                    "Template": {
                        "BlockType": "component",
                        "Width" : "*",
                        "Background" : "#09FFFFFF",
                        "ComponentName": "penalty_item",
                        "ComponentOptions": {
                            "Vars": {
                                "Penalty": "{Item}"
                            }
                        }
                    }
                }
            }
        ]
    }
}
