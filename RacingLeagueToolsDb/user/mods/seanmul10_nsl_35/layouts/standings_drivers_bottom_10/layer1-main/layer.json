{
    "BlockRoot": {
        "Name": "mainStack",
        "BlockType": "stack",
        "Margin": "{MarginRoot}",
        
        "Orientation": "Vertical",
        "Items": [
            //header block
            {               
                "BlockType": "component",
                "ComponentName": "nsl_standings_header",
                "ComponentOptions" :
                {
                    "Vars":
                    {
                        "championship" : "DRIVERS"
                    }
                }               
            },

            //table
            {
                "Name": "mainTable",
                "BlockType": "table",
                "Margin" : "{MarginTable}",
                "MarginRight" : 200,
                "TableOptions": {
                    "ItemsSource": "{Standings.Drivers}",
                    "RowSpacing": 16,
                    "ColSpacing": 4,
                    "HeaderTemplate": {
                        "BlockType": "text",
                        "MarginBottom": 8,
                        "TextOptionsExtern" : "tableColumnHeader"
                    },
                    "IndexStart": 10,
                    "IndexEnd": 20,
                    "Columns": [
                        //driver line
                        {
                            "Header": "",
                            "WidthStretch" : true,                            
                            "Template": {
                                "BlockType" : "component",
                                "ComponentName" : "driver_line_cell"   
                            }
                        },                        

                        //points
                        {
                            "Header": "",
                            "MarginLeft" : 20,
                            "Template": {
                                
                                "BlockType": "dock",
                                "PaddingLeft" : 24,
                                "PaddingRight" : 24,
                                "Background": "{BackgroundDefault}",                                
                                "Items": [                                    
                                    {
                                        "BlockType": "text",
                                        "Source": "{Item.Points}",
                                        "HorizontalAlignment": "Right",
                                        "VerticalAlignment": "Center",
                                        "Foreground" : "{StandingsPointsForeground}",
                                        "TextOptionsExtern": "primaryNumber"
                                    }
                                ],
                                "Triggers" :
                                [
                                    {
                                        "Condition" : "{Standings.IsPositionJumpForDriversExists}",
                                        "Property" : "PaddingRight",
                                        "Value" : 4
                                    }
                                ]
                            }
                        },

                         //position_jump
                         {
                            "Header": "",
                            "PaddingLeft" : 0,
                            "MarginLeft" : -4,
                            "Template":
                            {
                                "BlockType" : "component",
                                "PaddingLeft" : 0,                               
                                "PaddingRight" : 12,
                                "ComponentName" : "position_jump_cell"    
                            }
                        }
                    ]
                }
            }
        ]
    }
}
