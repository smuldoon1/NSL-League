{
    "BlockRoot": {
        "Name": "mainStack",
        "BlockType": "stack",
        "Margin": "{MarginRoot}",
        
        "Orientation": "Vertical",
        "Items": [
            //header block
            {               
                "BlockType": "component",
                "ComponentName": "nsl_standings_header",
                "ComponentOptions" :
                {
                    "Vars":
                    {
                        "championship" : "DRIVERS"
                    }
                }               
            },

            //table
            {
                "Name": "mainTable",
                "BlockType": "table",
                "Margin" : "{MarginTable}",
                "MarginRight" : 200,
                "TableOptions": {
                    "ItemsSource": "{Standings.Drivers}",
                    "RowSpacing": 16,
                    "ColSpacing": 4,
                    "HeaderTemplate": {
                        "BlockType": "text",
                        "MarginBottom": 8,
                        "TextOptionsExtern" : "tableColumnHeader"
                    },
                    "IndexStart": 10,
                    "IndexEnd": 20,
                    "Columns": [
                        //driver line
                        {
                            "Header": "",
                            "WidthStretch" : true,                            
                            "Template": {
                                "BlockType": "stack",
                                "HorizontalAlignment": "Left",
                                "VerticalAlignment": "Center",
                                "Background": "{Item.Team.Color}",
                                "Height": 140,
                                "Items": [
                                    {
                                        "BlockType": "image",
                                        "Height": 300,
                                        "MarginRight": 0,
                                        "VerticalAlignment": "Center",
                                        "ImageOptions": {
                                            "Path": "{Item.Team.LogoPath}",
                                            "VerticalAlignment": "Center"
                                        }
                                    },
                                    {
                                        "BlockType": "text",
                                        "Source": "{Item.Driver.Name}",
                                        "FontSize": 80,
                                        "FontName": "Formula1-Bold.ttf",
                                        "Foreground": "#ffffff",
                                        "Padding": "20"
                                    }
                                ]
                            }
                        },                        

                        //points
                        {
                            "Header": "",
                            "MarginLeft" : 20,
                            "Template": {
                                
                                "BlockType": "stack",
                                "PaddingLeft" : 24,
                                "PaddingRight" : 24,
                                "Background": "#ffffff",                                
                                "Items": [                                    
                                    {
                                        "BlockType": "text",
                                        "Source": "{Item.Points}",
                                        "HorizontalAlignment": "Center",
                                        "VerticalAlignment": "Center",
                                        "FontSize": 80,
                                        "FontName": "Formula1-Bold.ttf",
                                        "Foreground": "#000000",
                                        "Padding": "12"
                                    }
                                ],
                                "Triggers" :
                                [
                                    {
                                        "Condition" : "{Standings.IsPositionJumpForDriversExists}",
                                        "Property" : "PaddingRight",
                                        "Value" : 4
                                    }
                                ]
                            }
                        },

                         //position_jump
                         {
                            "Header": "",
                            "MarginLeft" : 20,
                            "Template": {
                                "BlockType" : "stack",
                                "PaddingLeft" : 10,                               
                                "PaddingRight" : 10,
                                "Background": "#ffffff",
                                "Width": 150,
                                "VerticalAlignment": "Center",
                                "HorizontalAlignment": "Center",
                                "Items": [
                                    {
                                        "BlockType" : "image",
                                        "RenderIf" : "{Item.PositionJump, Converter=NumberGreater, Parameter=0}",
                                        "Source" : "arrow_up.png",
                                        "HorizontalAlignment": "Center",
                                        "VerticalAlignment" : "Center",
                                        "Height" : 40,
                                        "Width": 80,
                                        "MarginLeft": 35                                                             
                                    },
                                    {
                                        "BlockType" : "image",
                                        "RenderIf" : "{Item.PositionJump, Converter=NumberLess, Parameter=0}",
                                        "Source" : "arrow_down.png",
                                        "HorizontalAlignment": "Center",
                                        "VerticalAlignment" : "Center",
                                        "Height" : 40  ,
                                        "Width": 80,
                                        "MarginLeft": 35                                                    
                                    }
                                ] 
                            }
                        }
                    ]
                }
            }
        ]
    }
}
