            },

            //footer
            {
                "BlockType": "dock",
                "Width": "*",
                "Height": "*",
                "Margin": "8, 28, 8, 0",
                "HorizontalAlignment" : "Left",
                "Spacing": 0,
                "Items": [
                    {
                        "BlockType": "text",
                        "Width": "1360",
