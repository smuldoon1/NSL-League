{
    "BlockRoot": {
        "Name": "mainStack",
        "BlockType": "stack",
        "Margin": "{MarginRoot}",
        "Orientation": "Vertical",
        "Items": [
            //header block
            {
                "Name": "headerBlock",
                "BlockType": "dock",
                "Orientation": "Horizontal",
                "Items": [
                    //headerLeft
                    {
                        "Name": "headerLeftPart",
                        "BlockType": "stack",
                        "Orientation": "Vertical",
                        "Spacing": 12,
                        "HorizontalAlignment": "Left",
                        "Items": [
                            //league name
                            {
                                "BlockType": "stack",
                                "VerticalAlignment": "Center",
                                "Items": [
                                    {
                                        "BlockType": "text",
                                        "Source": "{Season.LeagueInfo.LeagueName}",
                                        "FontName": "{FontNameWide}",
                                        "FontSize": 20
                                    },
                                    {
                                        "BlockType": "text",
                                        "Source": " · {Season.Name}",
                                        "VerticalAlignment": "Center",
                                        "FontName": "{FontNameWide}",
                                        "FontSize": 16,
                                        "Foreground": "{ForegroundDarker}"
                                    }
                                ]
                            },

                            //main header
                            {
                                "BlockType": "stack",
                                "VerticalAlignment": "Center",
                                "Spacing": 8,
                                "Items": [
                                    {
                                        "BlockType": "image",
                                        "VerticalAlignment": "Center",
                                        "Height": 48,
                                        "Source": "statistics_icon.png"
                                    },

                                    {
                                        "BlockType": "text",
                                        "MarginLeft": 12,
                                        "VerticalAlignment": "Center",
                                        "Source": "{Statistics.Header}",
                                        "FontName": "{FontNameWide}",
                                        "FontSize": 28
                                    },

                                    {
                                        "BlockType": "text",
                                        //"MarginLeft": 12,
                                        //"MarginTop": 2,
                                        "RenderIf": "{Statistics.SubHeader, Converter=EmptyObjectToFalse}",
                                        "VerticalAlignment": "Center",
                                        "Source": "  ·  {Statistics.SubHeader}",
                                        "FontName": "{FontNameWide}",
                                        "FontSize": 18,
                                        "Foreground": "{ForegroundDarker}"
                                    }
                                ]
                            }
                        ]
                    },

                    //headerRight
                    {
                        "Name": "headerRightPart",
                        "BlockType": "stack",
                        "MarginLeft": 56,
                        "Orientation": "Vertical",
                        "HorizontalAlignment": "Right",
                        "Items": [
                            {
                                "BlockType": "stack",
                                "Items": [
                                    {
                                        "BlockType": "stack",
                                        "Orientation": "Vertical",
                                        "Spacing": 4,
                                        "Items": [
                                            {
                                                "BlockType": "text",
                                                "HorizontalAlignment": "Right",
                                                "Source": "[Round] {Event.Position} [of] {Season.SeasonOverallNumberEvents}",
                                                "FontName": "{FontNameWide}",
                                                "FontSize": 18,
                                                "Foreground": "{ForegroundDarker}"
                                            },

                                            {
                                                "BlockType": "stack",
                                                "HorizontalAlignment": "Right",
                                                "Items": [
                                                    {
                                                        "BlockType": "text",
                                                        "Source": "[{Session.SessionType}]",
                                                        "FontName": "{FontNameWide}",
                                                        "FontSize": 18
                                                    },
                                                    //race duration
                                                    {
                                                        "BlockType": "text",
                                                        "RenderIf": false,
                                                        "Source": " • {Session.TotalLaps} [laps]",
                                                        "FontName": "{FontNameWide}",
                                                        "FontSize": 18,
                                                        "Triggers": [
                                                            {
                                                                "Condition": "{Session.IsLiveData}",
                                                                "ConditionAnd": "{Session.SessionType, Converter=StringEquals, Parameter=Race}",
                                                                "Property": "RenderIf",
                                                                "Value": true
                                                            }
                                                        ]
                                                    },
                                                    //qual, practice duration
                                                    {
                                                        "BlockType": "text",
                                                        "RenderIf": false,
                                                        "Source": " • {Session.SessionDurationMinutes} [min].",
                                                        "FontName": "{FontNameWide}",
                                                        "FontSize": 18,
                                                        "Triggers": [
                                                            {
                                                                "Condition": "{Session.IsLiveData}",
                                                                "ConditionAnd": "{Session.SessionType, Converter=StringNotEquals, Parameter=Race}",
                                                                "Property": "RenderIf",
                                                                "Value": true
                                                            }
                                                        ]
                                                    }
                                                ]
                                            },

                                            {
                                                "BlockType": "stack",
                                                "HorizontalAlignment": "Right",
                                                "Spacing": 4,
                                                "Items": [
                                                    {
                                                        "Name": "CountryFlag",
                                                        "BlockType": "image",
                                                        "VerticalAlignment": "Center",
                                                        "Height": 36,
                                                        "Source": "{Session.Track.Nation.LogoPath}"
                                                    },

                                                    {
                                                        "Name": "CountryName",
                                                        "BlockType": "text",
                                                        "MarginLeft": 12,
                                                        "VerticalAlignment": "Center",
                                                        "Source": "{Session.Track.Nation.Code, Converter=StringToUpperString}",
                                                        "FontName": "{FontNameWide}",
                                                        "FontSize": 18
                                                    }
                                                ]
                                            }
                                        ]
                                    },

                                    {
                                        "Name": "leagueLogo",
                                        "BlockType": "image",
                                        "Height": 82,
                                        "MarginLeft": 36,
                                        "Source": "{Season.LeagueInfo.LeagueLogo}"
                                    }
                                ]
                            }
                        ]
                    }
                ]
            },

            //separator
            {
                "Name": "separator",
                "BlockType": "image",
                "MarginTop": 16,
                "MarginLeft": 4,
                "MarginRight": 4,
                "MarginBottom": 24,
                "Width": "*",
                "Source": "separator.png"
            },

            //table
            {
                "Name": "mainTable",
                "BlockType": "table",
                "Margin": "{MarginTable}",
                "TableOptions": {
                    "ItemsSource": "{Statistics.Drivers}",
                    "RowSpacing": 12,
                    "ColSpacing": 24,
                    "SeparatorSpace": 12,
                    "GroupSpaceReduction": 12,
                    "HeaderTemplate": {
                        "BlockType": "text",
                        "MarginBottom": 8,
                        "TextOptionsExtern": "tableColumnHeader"
                    },
                    "Columns": [
                        // //position
                        {
                            "Header": "",
                            "Template": {
                                "BlockType": "component",
                                "ComponentName": "position_cell",
                                "ComponentOptions": {
                                    "Vars": {
                                        "position": "{Item.Position}"
                                    }
                                }
                            }
                        },

                        //driver line
                        {
                            "Header": "",
                            "WidthStretch": true,
                            "Template": {
                                "BlockType": "component",
                                "ComponentName": "driver_line_cell"
                            }
                        },

                        //column 0
                        {
                            "Header": "{Statistics.Column0.Header}",
                            "IsSeparator": "{Statistics.Column0.Type, Converter=EnumEquals, Parameter=Separator}",
                            "GroupId": "{Statistics.Column0.GroupId}",
                            "WidthStretch": true,
                            "MarginLeft": 8,
                            "Template": {
                                "BlockType": "component",
                                "Name": "statist",
                                "ComponentOptions": {
                                    "ComponentName": "statistics_cell",
                                    "Vars": {
